<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>DynamicSQL</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body style="padding-top: 10px">
    <div class="col-xs-8 col-xs-offset-2">
        <div class="panel-heading">
            <h3>CountriesbyGDP</h3>
        </div>
        <form asp-controller="CountriesbyGDP" asp-action="DynamicSQL">
            <div>
                <label for="Country">Name of the Country</label>
                <br />
                <input type="text" name="Country" placeholder="Name of the Country" />
            </div>
            <br />
            <div>
                <label for="Region">Region</label>
                <br />
                <input type="text" name="Region" placeholder="Region" />
            </div>
            <br />
            <div>
                <label for="EstimatebyDollar">EstimatebyDollar</label>
                <br />
                <input type="number" name="EstimatebyDollar" placeholder="EstimatebyDollar" />
            </div>
            <br />
            <div>
                <label for="Population">Population</label>
                <br />
                <input type="number" name="Population" placeholder="Population" />
            </div>
            <br />
            <input type="submit" value="DynamicSQL" />
        </form>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">Country</th>
                    <th scope="col">Region</th>
                    <th scope="col">EstimatebyDollar</th>
                    <th scope="col">Population</th>
                </tr>
            <tbody>
                @foreach (var CountriesGdp in Model)
                {
    <tr>
        <td>@CountriesGdp.Country</td>
        <td>@CountriesGdp.Region</td>
        <td>@CountriesGdp.EstimatebyDollar</td>
        <td>@CountriesGdp.Population</td>
    </tr>}
            </tbody>
        </table>
    </div>
</body>
</html>
